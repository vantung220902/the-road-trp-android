<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#FCF4F5"
                android:endColor="#DA59FA"
                android:startColor="#598DFA" />
<corners android:radius="29dp"/>
        </shape>
    </item>
    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>